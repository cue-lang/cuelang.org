package site

content: dir: page: {
	leftDelim:  "{{{"
	rightDelim: "}}}"

	sanitisers: [
		{
			kind:          "patternSanitiser"
			commandPrefix: "cue eval"
			pattern: expr: "member1"
			replacement: "member3"
		},
		{
			kind:    "patternSanitiser"
			command: "cue version"
			pattern: expr: #"(?m)GOARCH .+$"#
			replacement: "GOARCH amd64"
		},
		{
			kind:    "patternSanitiser"
			command: "cue version"
			pattern: expr: #"(?m)GOOS .+$"#
			replacement: "GOOS linux"
		},
		{
			kind:    "patternSanitiser"
			command: "cue version"
			pattern: expr: #"(?m)^\s*GOAMD64 .*\n"#
			replacement: ""
		},
		{
			kind:    "patternSanitiser"
			command: "cue version"
			pattern: expr: #"(?m)^\s*GOARM64 .*\n"#
			replacement: ""
		},
	]
}
